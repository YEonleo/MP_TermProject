<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/round_button"
    tools:ignore="MissingDefaultResource">
    <TextView
        android:id="@+id/componentTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_b"
        android:padding="5dp"
        android:text="@string/cpu"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/componentIconImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/cpu"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/nameAndPriceTextView"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_l"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:text="i5-12400\n200,000"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textAlignment="gravity"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/amountSetContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_gravity="right"
        android:visibility="gone"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/amountSubtractButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/nanum_square_l"
            android:text="0"/>
        <Button
            android:id="@+id/amountAddButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>